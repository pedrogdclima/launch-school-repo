<% content_for :header_links do %>
  <a class="list" href="/lists">All Lists</a>
<% end %>

<section id="todos" <%= list_complete?(@list) ? "class='complete'" : "" %>>
  <header>
    <h2><%= @list[:name] %></h2>
    <ul>
      <li><%= fraction_completed(@list) %></li>
      <li>
        <form action="/lists/<%= @index %>/complete" method="post">
          <button class="check" type="submit">Complete All</button>
        </form>
      </li>
      <li>
        <a class="edit" href="/lists/<%= @index %>/edit">Edit List</a>
      </li>
    </ul>
  </header>
  <ul id="todos">
    <% sort_collection(@list[:todos], 'todos') do |todo, index| %>
    <li <%= todo[:completed] ? "class='complete'" : "" %>>

      <form action="/lists/<%= @index %>/todos/<%= index %>/state" method="post" class="check">
        <input type="hidden" name="state" value="<%= todo[:completed] %>">
        <button type="submit">Complete</button>
      </form>

      <h3><%= todo[:name] %></h3>
      <form action="/lists/<%= @index %>/todos/<%= index %>/delete" method="post" class="delete">
        <button type="submit">Delete</button>
      </form>
    </li>
    <% end %>
  </ul>
</section>

<form action="/lists/<%= @index %>/todos" method="post">
  <dl>
    <dt>
      <label for="todo">Enter a new todo item:</label>
    </dt>
    <dd>
      <input name="todo" id="todo" placeholder="Something to do" type="text" value="<% params[:todo] %>">
    </dd>
  </dl>
  <fieldset class="actions">
    <input type="submit" value="Add">
  </fieldset>
</form>
