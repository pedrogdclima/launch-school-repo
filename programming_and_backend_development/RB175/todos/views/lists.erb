<% content_for :header_links do %>
  <a class="add" href="/lists/new">New List</a>
<% end %>

<ul id="lists">
  <% sort_collection(@lists) do |list, index| %>
  <li <%= list_complete?(list) ? "class='complete'" : "" %>>
    <a href="/lists/<%= index %>">
      <h2><%= list[:name] %></h2>
      <p><%= fraction_completed(list) %></p>
    </a>
  </li>
  <% end %>
</ul>